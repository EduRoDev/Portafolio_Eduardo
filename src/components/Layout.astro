---
import SplashScreen from "./SplashScreen.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/png" href="images/gengar.png" />
        <title>Portafolio</title>
    </head>
    <body class="scroll-smooth bg-black min-h-screen">
        <SplashScreen />
        <slot />
    </body>
</html>

<script>
    if ("scrollRestoration" in history) {
        history.scrollRestoration = "manual";
    }
    window.scrollTo(0, 0);

    document.addEventListener("DOMContentLoaded", () => {
        window.scrollTo(0, 0);
        document.documentElement.scrollTop = 0;
        document.body.scrollTop = 0;
    });

    window.addEventListener("load", () => {
        setTimeout(() => {
            window.scrollTo(0, 0);
            document.documentElement.scrollTop = 0;
            document.body.scrollTop = 0;
        }, 0);
    });

    window.addEventListener("beforeunload", () => {
        window.scrollTo(0, 0);
    });
</script>

<style is:global>
    @import "tailwindcss";
    @import url("https://fonts.googleapis.com/css2?family=BBH+Sans+Hegarty&display=swap");
    html {
        scroll-behavior: smooth;
        scroll-padding-top: 120px;
    }

    @supports (scroll-behavior: smooth) {
        html {
            scroll-behavior: smooth;
        }
    }

    .bbh-sans-hegarty-regular {
        font-family: "BBH Sans Hegarty", sans-serif;
        font-weight: 400;
        font-style: normal;
    }
</style>
