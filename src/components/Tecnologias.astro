<style>
    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    .carousel-track {
        animation: scroll 30s linear infinite;
        width: fit-content;
    }

    .carousel-track:hover {
        animation-play-state: paused;
    }

    .carousel-item {
        flex-shrink: 0;
        transition: transform 0.3s ease;
    }

    .carousel-item:hover {
        transform: scale(1.1);
    }
</style>