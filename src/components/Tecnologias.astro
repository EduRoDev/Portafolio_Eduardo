<script>
    import { gsap } from 'gsap';

    const carouselTrack = document.querySelector('.carousel-track') as HTMLElement;
    const carouselItems = document.querySelectorAll('.carousel-item') as NodeListOf<HTMLElement>;    

    if (carouselTrack && carouselItems.length > 0) {
        const itemWidth = carouselItems[0].offsetWidth + 32; 
        const totalItems = carouselItems.length / 2;
        const totalWidth = itemWidth * totalItems;

        const animation = gsap.to(carouselTrack, {
            x: -totalWidth,
            duration: 40,
            ease: "none",
            repeat: -1,
            modifiers: {
                x: gsap.utils.unitize(x => parseFloat(x) % totalWidth)
            }
        });

        carouselTrack.addEventListener('mouseenter', () => {
            animation.pause();
        });

        carouselTrack.addEventListener('mouseleave', () => {
            animation.play();
        });

        carouselItems.forEach(item => {
            item.addEventListener('mouseenter', () => {
                gsap.to(item, {
                    scale: 2,
                    duration: 0.4,
                    ease: "power2.out"
                });
            });

            item.addEventListener('mouseleave', () => {
                gsap.to(item, {
                    scale: 1,
                    duration: 0.4,
                    ease: "power2.out"
                });
            });
        });
    }
</script>