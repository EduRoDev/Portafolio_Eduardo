<div id="inicio" class="flex flex-col md:flex-row-reverse items-center gap-96 p-4 md:p-8 lg:p-16 py-16 scroll-mt-24">
    <div class="flex flex-col items-center md:items-end">
        <img
            id="golang"
            src="/src/assets/Gengar.png"
            alt="imagen"
            class="w-40 md:w-80 lg:w-96 h-auto object-contain transition-transform duration-200 ease-in-out hover:scale-110 cursor-pointer"
        />
    </div>
    
    <div class="flex flex-col justify-center items-start text-center md:text-left">
        <h1 id="H1_Hero" class="text-4xl md:text-5xl lg:text-6xl font-bold text-purple-900 mb-4">
            Hola, soy Eduardo
        </h1>
        <p class="text-lg md:text-xl lg:text-3xl text-gray-700 mb-6">
            Desarrollador Full Stack | Apasionado por la tecnología y la innovación
        </p>
    </div>
</div>

<script>
    import { gsap } from "gsap";
    import SplitType from "split-type";
    const text = new SplitType("#H1_Hero", { types: "chars"})

    text.chars?.forEach((char, index)=> {
        let charTl = gsap.timeline();

			charTl.from(char, {
				scale: gsap.utils.random(0,6),
				x: gsap.utils.random(-150, 150),
				y: gsap.utils.random(-150, 150),
				opacity: 0,
				rotate: gsap.utils.random(-360, 360),
				duration: 1,
				delay: index * 0.05,
				ease: "back.out",
			});

			charTl.from(
				char,
				{
					duration: 1,
				},
				"-=0.35",
			);
    })

</script>

