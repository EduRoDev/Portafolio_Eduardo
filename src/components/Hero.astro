<script>
    import { gsap } from "gsap";
    import SplitType from "split-type";
    
    function initHeroAnimations() {
        window.scrollTo(0, 0);
        const text = new SplitType("#H1_Hero", { 
            types: "chars",
            tagName: "span"
        });

        text.chars?.forEach((char, index)=> {
            let charTl = gsap.timeline();

            charTl.from(char, {
                scale: gsap.utils.random(0, 6),
                x: gsap.utils.random(-150, 150),
                y: gsap.utils.random(-150, 150),
                opacity: 0,
                rotate: gsap.utils.random(-360, 360),
                duration: 1,
                delay: index * 0.05,
                ease: "back.out"
            });

            charTl.from(
                char,
                {
                    duration: 1,
                },
                "-=0.35",
            );
        });    

        gsap.to("#imagen_hero", {
            scale: 1.07,
            duration: 1,
            ease: "power1.inOut",
            repeat: -1,
            yoyo: true, 
        });
    }

    window.addEventListener('splashScreenClosed', () => {
        initHeroAnimations();
    });

    if (!document.getElementById('splash-screen')) {
        initHeroAnimations();
    }
</script>

